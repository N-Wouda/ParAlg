rule-configurations:
  - key: LONG_LINE              # Maximum line length of 80 characters.
    value: 80
  - key: TOO_MANY_PARAMETERS    # Maximum number of parameters for a function.
    value: 5
  - key: LONG_METHOD            # Maximum number of lines for a method or
    value: 60                   # function.

max-priority-1: 0               # We are going to be very strict on all
max-priority-2: 0               # violations. Should some be allowed, they
max-priority-3: 0               # must explicitly be silenced.
