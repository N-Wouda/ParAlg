rule-configurations:
  - key: LONG_LINE              # Maximum line length of 80 characters.
    value: 80
  - key: TOO_MANY_PARAMETERS    # Maximum number of parameters for a function.
    value: 5
  - key: LONG_METHOD            # Maximum number of lines for a method or
    value: 60                   # function.

max-priority-1: 0               # We are going fairly strict on violations, but
max-priority-2: 10              # since macro expansions are nigh impossible to
max-priority-3: 10              # silence, some will be allowed.
